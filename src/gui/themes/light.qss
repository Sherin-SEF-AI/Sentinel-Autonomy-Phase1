/* ============================================================================
   SENTINEL Light Theme
   Modern light theme with configurable accent colors
   ============================================================================ */

/* Global Styles */
* {
    font-family: "Segoe UI", "Roboto", "Arial", sans-serif;
    font-size: 10pt;
}

QMainWindow {
    background-color: #f5f5f5;
}

QWidget {
    background-color: #f5f5f5;
    color: #2d2d2d;
}

/* Menu Bar */
QMenuBar {
    background-color: #ffffff;
    color: #2d2d2d;
    border-bottom: 1px solid #e0e0e0;
    padding: 4px;
}

QMenuBar::item {
    background-color: transparent;
    padding: 6px 12px;
    border-radius: 4px;
}

QMenuBar::item:selected {
    background-color: #e8e8e8;
}

QMenuBar::item:pressed {
    background-color: {accent_color};
    color: #ffffff;
}

/* Menu */
QMenu {
    background-color: #ffffff;
    color: #2d2d2d;
    border: 1px solid #e0e0e0;
    padding: 4px;
}

QMenu::item {
    padding: 6px 24px 6px 12px;
    border-radius: 4px;
}

QMenu::item:selected {
    background-color: #e8e8e8;
}

QMenu::item:pressed {
    background-color: {accent_color};
    color: #ffffff;
}

QMenu::separator {
    height: 1px;
    background-color: #e0e0e0;
    margin: 4px 8px;
}

/* Tool Bar */
QToolBar {
    background-color: #ffffff;
    border: none;
    padding: 4px;
    spacing: 4px;
}

QToolBar::separator {
    background-color: #e0e0e0;
    width: 1px;
    margin: 4px 8px;
}

QToolButton {
    background-color: transparent;
    color: #2d2d2d;
    border: 1px solid transparent;
    border-radius: 4px;
    padding: 6px 12px;
}

QToolButton:hover {
    background-color: #e8e8e8;
    border: 1px solid #d0d0d0;
}

QToolButton:pressed {
    background-color: {accent_color};
    color: #ffffff;
}

QToolButton:checked {
    background-color: {accent_color};
    color: #ffffff;
}

/* Status Bar */
QStatusBar {
    background-color: #ffffff;
    color: #2d2d2d;
    border-top: 1px solid #e0e0e0;
}

/* Push Button */
QPushButton {
    background-color: #ffffff;
    color: #2d2d2d;
    border: 1px solid #d0d0d0;
    border-radius: 4px;
    padding: 6px 16px;
    min-width: 80px;
}

QPushButton:hover {
    background-color: #e8e8e8;
    border: 1px solid #c0c0c0;
}

QPushButton:pressed {
    background-color: {accent_color};
    color: #ffffff;
}

QPushButton:disabled {
    background-color: #f5f5f5;
    color: #a0a0a0;
    border: 1px solid #e0e0e0;
}

/* Line Edit */
QLineEdit {
    background-color: #ffffff;
    color: #2d2d2d;
    border: 1px solid #d0d0d0;
    border-radius: 4px;
    padding: 6px;
}

QLineEdit:focus {
    border: 1px solid {accent_color};
}

/* Text Edit */
QTextEdit {
    background-color: #ffffff;
    color: #2d2d2d;
    border: 1px solid #d0d0d0;
    border-radius: 4px;
}

QTextEdit:focus {
    border: 1px solid {accent_color};
}

/* Combo Box */
QComboBox {
    background-color: #ffffff;
    color: #2d2d2d;
    border: 1px solid #d0d0d0;
    border-radius: 4px;
    padding: 6px;
}

QComboBox:hover {
    border: 1px solid #c0c0c0;
}

QComboBox:focus {
    border: 1px solid {accent_color};
}

QComboBox::drop-down {
    border: none;
    width: 20px;
}

QComboBox QAbstractItemView {
    background-color: #ffffff;
    color: #2d2d2d;
    border: 1px solid #d0d0d0;
    selection-background-color: {accent_color};
    selection-color: #ffffff;
}

/* Spin Box */
QSpinBox, QDoubleSpinBox {
    background-color: #ffffff;
    color: #2d2d2d;
    border: 1px solid #d0d0d0;
    border-radius: 4px;
    padding: 6px;
}

QSpinBox:focus, QDoubleSpinBox:focus {
    border: 1px solid {accent_color};
}

/* Slider */
QSlider::groove:horizontal {
    background-color: #e0e0e0;
    height: 6px;
    border-radius: 3px;
}

QSlider::handle:horizontal {
    background-color: {accent_color};
    width: 16px;
    height: 16px;
    margin: -5px 0;
    border-radius: 8px;
}

QSlider::handle:horizontal:hover {
    background-color: {accent_color_light};
}

/* Progress Bar */
QProgressBar {
    background-color: #ffffff;
    border: 1px solid #d0d0d0;
    border-radius: 4px;
    text-align: center;
    color: #2d2d2d;
}

QProgressBar::chunk {
    background-color: {accent_color};
    border-radius: 3px;
}

/* Tab Widget */
QTabWidget::pane {
    background-color: #f5f5f5;
    border: 1px solid #d0d0d0;
    border-radius: 4px;
}

QTabBar::tab {
    background-color: #ffffff;
    color: #2d2d2d;
    border: 1px solid #d0d0d0;
    border-bottom: none;
    border-top-left-radius: 4px;
    border-top-right-radius: 4px;
    padding: 8px 16px;
    margin-right: 2px;
}

QTabBar::tab:selected {
    background-color: #f5f5f5;
    border-bottom: 2px solid {accent_color};
}

QTabBar::tab:hover {
    background-color: #e8e8e8;
}

/* List Widget */
QListWidget {
    background-color: #ffffff;
    color: #2d2d2d;
    border: 1px solid #d0d0d0;
    border-radius: 4px;
}

QListWidget::item {
    padding: 6px;
    border-radius: 4px;
}

QListWidget::item:selected {
    background-color: {accent_color};
    color: #ffffff;
}

QListWidget::item:hover {
    background-color: #e8e8e8;
}

/* Tree Widget */
QTreeWidget {
    background-color: #ffffff;
    color: #2d2d2d;
    border: 1px solid #d0d0d0;
    border-radius: 4px;
}

QTreeWidget::item {
    padding: 4px;
}

QTreeWidget::item:selected {
    background-color: {accent_color};
    color: #ffffff;
}

QTreeWidget::item:hover {
    background-color: #e8e8e8;
}

/* Table Widget */
QTableWidget {
    background-color: #ffffff;
    color: #2d2d2d;
    border: 1px solid #d0d0d0;
    border-radius: 4px;
    gridline-color: #e0e0e0;
}

QTableWidget::item:selected {
    background-color: {accent_color};
    color: #ffffff;
}

QHeaderView::section {
    background-color: #ffffff;
    color: #2d2d2d;
    border: none;
    border-right: 1px solid #e0e0e0;
    border-bottom: 1px solid #e0e0e0;
    padding: 6px;
}

/* Scroll Bar */
QScrollBar:vertical {
    background-color: #f5f5f5;
    width: 12px;
    border-radius: 6px;
}

QScrollBar::handle:vertical {
    background-color: #c0c0c0;
    border-radius: 6px;
    min-height: 20px;
}

QScrollBar::handle:vertical:hover {
    background-color: #a0a0a0;
}

QScrollBar::add-line:vertical, QScrollBar::sub-line:vertical {
    height: 0px;
}

QScrollBar:horizontal {
    background-color: #f5f5f5;
    height: 12px;
    border-radius: 6px;
}

QScrollBar::handle:horizontal {
    background-color: #c0c0c0;
    border-radius: 6px;
    min-width: 20px;
}

QScrollBar::handle:horizontal:hover {
    background-color: #a0a0a0;
}

QScrollBar::add-line:horizontal, QScrollBar::sub-line:horizontal {
    width: 0px;
}

/* Dock Widget */
QDockWidget {
    background-color: #f5f5f5;
    color: #2d2d2d;
}

QDockWidget::title {
    background-color: #ffffff;
    padding: 6px;
    border: 1px solid #e0e0e0;
    border-radius: 4px;
}

QDockWidget::close-button, QDockWidget::float-button {
    background-color: transparent;
    border: none;
    padding: 2px;
}

QDockWidget::close-button:hover, QDockWidget::float-button:hover {
    background-color: #e8e8e8;
}

/* Splitter */
QSplitter::handle {
    background-color: #d0d0d0;
}

QSplitter::handle:horizontal {
    width: 2px;
}

QSplitter::handle:vertical {
    height: 2px;
}

QSplitter::handle:hover {
    background-color: {accent_color};
}

/* Group Box */
QGroupBox {
    background-color: #f5f5f5;
    border: 1px solid #d0d0d0;
    border-radius: 4px;
    margin-top: 12px;
    padding-top: 12px;
}

QGroupBox::title {
    subcontrol-origin: margin;
    subcontrol-position: top left;
    padding: 4px 8px;
    color: #2d2d2d;
}

/* Check Box */
QCheckBox {
    color: #2d2d2d;
    spacing: 8px;
}

QCheckBox::indicator {
    width: 18px;
    height: 18px;
    border: 1px solid #d0d0d0;
    border-radius: 4px;
    background-color: #ffffff;
}

QCheckBox::indicator:checked {
    background-color: {accent_color};
    border: 1px solid {accent_color};
}

QCheckBox::indicator:hover {
    border: 1px solid #c0c0c0;
}

/* Radio Button */
QRadioButton {
    color: #2d2d2d;
    spacing: 8px;
}

QRadioButton::indicator {
    width: 18px;
    height: 18px;
    border: 1px solid #d0d0d0;
    border-radius: 9px;
    background-color: #ffffff;
}

QRadioButton::indicator:checked {
    background-color: {accent_color};
    border: 1px solid {accent_color};
}

QRadioButton::indicator:hover {
    border: 1px solid #c0c0c0;
}

/* Message Box */
QMessageBox {
    background-color: #f5f5f5;
}

/* Tool Tip */
QToolTip {
    background-color: #ffffff;
    color: #2d2d2d;
    border: 1px solid #d0d0d0;
    border-radius: 4px;
    padding: 4px;
}
